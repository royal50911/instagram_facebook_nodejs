<!doctype html>

<html>
<head>
	<title>Instagram Hashtags</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
      <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
      <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
</head>

<body>
      {{#if hashtagValue}}
      <div class="container">
        <h3>You are currently checking out #{{hashtagValue}}</h3>
        <div class="row">
            {{#each imageArray}}
              <div class="col-xs-4" class="images" style="text-align:center">
                <img src="{{url}}" class="img-responsive" class="img hashtag-img"><br>
                <form id="saveHashTag" role="form" method="post" action="/save">
                  <input type="hidden" name="hashtag" value="{{../hashtagValue}}">
                  <input type="hidden" name="url" value="{{url}}">
                  <button type="submit" class="btn btn-info">Save</button>
                </form>
                <br><br>
              </div>
            {{/each}}
          </div>
      </div>
      <br>
      {{/if}}
      <div class="container">
        <h1>What hashtag would you like to see?</h1>

        <form id="viewHashTag" role="form" method="post" action="/hashtag">
            <h3>View Hashtag</h3>
            <div class="form-group">
              <input type="text" class="form-control" id="hashtag" placeholder="hashtag" name="hashtag">
            </div>
            <input type="submit" id="submitBtn" class="btn btn-default" value="View Hashtag"></input>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="js/jquery.validate.min.js"></script>
    <script src="js/additional-methods.min.js"></script>
    <script src="js/validate.js"></script>
    <script src="js/bootstrap.js"></script>
</body>
</html>
